<header style="position: sticky; top: 0; z-index: 1000;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-image: url('/images/c10.jpg'); background-size: cover;">
        <a class="navbar-brand" style="font-style: italic ; color:white" href="/">Shopping cart <i class="bi bi-bag-fill"></i></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" style="font-style: italic ; color:white" href="/">Products  <i class="bi bi-box-fill"></i> <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="font-style: italic ; color:white" href="/cart">Carts <i class="bi bi-cart"></i> <span class="badge badge-success" id="cart-count">{{this.cartCount}}</span></a>
                </li>
            </ul>
            <div class="dropdown" style="border: radius 25px; ; color:white">
                <button class="btn btn-secondary dropdown-toggle flex-right" style="font-style: italic;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{#if user}}
                    {{user.Name}}
                    {{else}}
                    Account
                    {{/if}}
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="border-radius:10px 40px ; ">
                    {{#if user}}
                    <a class="dropdown-item" href="/logout">Logout</a>
                    {{else}}
                    <a class="dropdown-item" href="/login">Login</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </nav>
</header>
