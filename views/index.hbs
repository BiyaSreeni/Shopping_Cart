
 <section style="background-image: url('/images/15.jpg'); width: 100%; height: 100%; background-size: cover; background-position: center;" >
        <div class="container"  >
            <div class="row pt-5">
                {{#each products}}
                <div class="col-md-3 p-3 ">
                    <div class="card" style="width: 15rem; height: 30rem; border-radius: 15px; overflow: hidden; background-image: url('/images/c2.jpeg'); background-size: cover; background-position: center;">
  <img class="card-img-top" src="/product-images/{{this._id}}.png" alt="Card image cap" style="height: 15rem; border-radius: 15px 15px 0 0;">
  <div class="card-body flex-colum" style="width: 15rem; height: 10rem; ">
    <h5 class="card-title" style="color: white;">{{this.Name}}</h5>
    <p class="card-text" style="color: white;">{{this.Description}}</p>
    <p class="card-text" style="color: white;">{{this.Category}}</p>
    <p class="card-text" style="color: white;">{{this.Price}}</p>
    <button onclick="addToCart('{{this._id}}')" style="border-radius: 40px 10px;" class="btn btn-primary">Add to Cart</button>
  </div>
</div>

                    </div>
                {{/each}}
            </div>
        </div>
    </section>
    