<div class="hi" style="background-image: url('/images/13.jpg'); width: 100%; height: 100vh; background-size: cover; background-position: center;">
  <div class="col-md-6 m-auto">
    <div class="container mt-1 pl-5">
     <h2 class="text-center" style="font-style:italic; color: white; text-align:center;">Login</h2>

      {{#if adminErr}}
      <p style="color: white;">Invalid or wrong password <i class="bi bi-exclamation-circle"></i></p>
      {{/if}}
      <form action="/admin/adminLogin" method="post">
        <div class="form-group">
          <label style="font-style:italic; color:white; text-align:center;">Email address</label>
          <input type="email" class="form-control" name="Email" placeholder="Enter email " style="">
        </div>
        <div class="form-group">
          <label style="font-style:italic; color:white; text-align:center;">Password</label>
          <input type="password" class="form-control" name="Password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary float-right">Submit</button>
      </form>
    </div>
  </div>
</div>
