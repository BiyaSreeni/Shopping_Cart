<section style="background-image: url('/images/p7.jpg'); width: 100%; height: 100vh; background-size: cover; background-position: center;">
    <div class="container mt-1">
        <div class="row">
        <a href="/admin/add-products" style=" border-radius:40px 10px" class="btn btn-success ml-auto">Add products</a>
        </div>
        <table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px;height:50px" src="/product-images/{{this._id}}.png" alt=""></td>
      <td>
        <a href="/admin/edit-products/{{this._id}}" class="btn btn-primary" style="border-radius: 40px; 10px" >edit</a>
        <a href="/admin/delete-products/{{this._id}} " class="btn btn-danger " style="border-radius: 40px; 10px" onclick="return confirm('are you sure{{this.Name}} ?')">delete</a>
        
      </td>
   
    </tr>
    {{/each}}

  </tbody>
</table>
    </div>
</section>
<script>
  $(function () {
    $('#productsTable').DataTable();
  });
</script>